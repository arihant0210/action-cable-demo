<div id="messages">
  <%= render @messages %>
  <div class="logged-user" data-logged-user="<%= current_user.id%>"></div>
</div>
<%= form_with url: '/messages', method: :post, remote: true, html: {id: 'new-message'} do |f| %>
  <h2>New Message</h2>
  <%= f.label :body %>
  <%= f.text_area :body, id: 'message-body' %>
  <%= f.hidden_field :receiver_id, value: params[:receiver_id] %>
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <br>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
